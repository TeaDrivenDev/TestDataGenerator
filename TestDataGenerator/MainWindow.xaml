<controls:MetroWindow x:Class="TestDataGenerator.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" Icon="metro.ico"
                      Title="Test Data Generator" Height="350" Width="525">
    <controls:MetroWindow.Style>
        <DynamicResource ResourceKey="VSWindowStyleKey" />
    </controls:MetroWindow.Style>
    <Grid>
        <Label Content="Lenght:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" />
        <TextBox Name="TestDataLength" TextWrapping="Wrap" Margin="100,13,10,0" Height="23" VerticalAlignment="Top"
                 TextChanged="TestDataLengthTextChanged" KeyDown="TestDataLengthOnKeyDown"/>
        <Label Content="Data Type:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" />
        <ComboBox Name="DataType" Margin="100,44,10,0" Height="23" VerticalAlignment="Top" KeyDown="DataTypeOnKeyDown"
                  SelectionChanged="DataTypeSelectionChanged">
            <ComboBoxItem Content="Letters" />
            <ComboBoxItem Content="Numbers" />
            <ComboBoxItem Content="Capital Letters" />
            <ComboBoxItem Content="Small Letters" />
            <ComboBoxItem Content="Letters and Numbers" />
            <ComboBoxItem Content="Letters, Numbers and Signs" />
        </ComboBox>
        <CheckBox Content="Unicode" HorizontalAlignment="Left" Margin="100,72,0,0" VerticalAlignment="Top"
                  IsEnabled="False" Visibility="Hidden" />
        <Button x:Name="Generator" Content="Generate" Margin="0,95,90,0" Height="20" VerticalAlignment="Top"
        	HorizontalAlignment="Right" Width="75" Click="GenerateOutputOnClick" />
        <Button Name="CopyToClipboard" Content="Clipboard" Margin="0,95,10,0" Height="20" VerticalAlignment="Top"
                HorizontalAlignment="Right" Width="75" Click="CopyToClipboardOnClick" />
        <Label Content="Output:" HorizontalAlignment="Left" Margin="10,121,0,0" VerticalAlignment="Top" />
        <TextBox Name="Output" TextWrapping="Wrap" Margin="100,125,10,10" IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto" />
    </Grid>
</controls:MetroWindow>